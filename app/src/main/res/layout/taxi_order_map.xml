

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/constraintLayout"
        tools:context="com.sconnecting.driverapp.ui.taxi.order.map.MapView">

        <fragment
            android:id="@+id/googlemap"
            android:name="com.google.android.gms.maps.SupportMapFragment"

            class="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
            app:layout_constraintTop_toTopOf="@+id/constraintLayout"
            app:layout_constraintRight_toRightOf="@+id/constraintLayout"
            app:layout_constraintBottom_toBottomOf="@+id/constraintLayout" />

        <Button
            android:id="@+id/btnMyLocation"
            android:background="@drawable/mylocation"
            android:visibility="visible"
            android:elevation="2dp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:layout_constraintTop_toTopOf="@+id/googlemap"
            android:layout_marginTop="100dp"
            app:layout_constraintRight_toRightOf="@+id/googlemap"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnDirection"
            android:background="@drawable/direction"
            android:visibility="visible"
            android:elevation="2dp"
            android:layout_width="32dp"
            android:layout_height="32dp"
            app:layout_constraintTop_toBottomOf="@+id/btnMyLocation"
            android:layout_marginTop="10dp"
            app:layout_constraintRight_toRightOf="@+id/googlemap"
            android:layout_marginRight="8dp"
            android:layout_marginEnd="8dp" />


    </android.support.constraint.ConstraintLayout>

